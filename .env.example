# Database Configuration
# For Docker: DATABASE_URL=postgresql://postgres:postgres@db:5432/cricsocial
# For local PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/cricsocial
DATABASE_URL=

# Email Configuration (optional - uses ethereal for testing if not set)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=

# App Configuration
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5000
SESSION_SECRET=your_secure_session_secret_here
NODE_ENV=development
PORT=5000

# MinIO Object Storage Configuration (optional - local fallback used if not set)
# For Docker: MINIO_ENDPOINT=minio
# For local: MINIO_ENDPOINT=localhost
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# Redis Cache Configuration
# For Docker: REDIS_HOST=redis
# For local: REDIS_HOST=localhost
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Features
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Cloudinary Configuration (for image/video storage)
# Get your credentials from: https://cloudinary.com/console
# IMPORTANT: Never commit actual API keys to git!
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Legacy AI Keys (optional)
OPENAI_API_KEY=
STABILITY_AI_KEY=
